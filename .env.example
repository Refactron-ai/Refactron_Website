# EmailJS Configuration
REACT_APP_EMAILJS_SERVICE_ID=your_service_id_here
REACT_APP_EMAILJS_WELCOME_TEMPLATE_ID=welcome_template_id_here
REACT_APP_EMAILJS_NOTIFICATION_TEMPLATE_ID=notification_template_id_here
REACT_APP_EMAILJS_PUBLIC_KEY=your_public_key_here

# Email Configuration
REACT_APP_FROM_EMAIL=hello@refactron.dev
REACT_APP_NOTIFICATION_EMAIL=hello@refactron.dev

# Sentry Configuration (Optional)
REACT_APP_SENTRY_DSN=your_sentry_dsn_here

# Local Development - Enable Auth Pages Testing
# Set to "true" to enable login/signup pages on localhost (default: false)
# When enabled, you can access /login and /signup routes on localhost:3000
REACT_APP_ENABLE_LOCAL_AUTH=false

# Base URL for API calls (optional, defaults to relative paths)
# REACT_APP_API_BASE_URL=http://localhost:3000

# OAuth Configuration (Google & GitHub)
# Get these from your OAuth provider dashboards:
# - Google: https://console.cloud.google.com/apis/credentials
# - GitHub: https://github.com/settings/developers

# Google OAuth Client ID
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here

# GitHub OAuth Client ID
REACT_APP_GITHUB_CLIENT_ID=your_github_client_id_here

# Optional: Local development OAuth client IDs (if different from production)
# REACT_APP_GOOGLE_CLIENT_ID_LOCAL=your_local_google_client_id
# REACT_APP_GITHUB_CLIENT_ID_LOCAL=your_local_github_client_id
