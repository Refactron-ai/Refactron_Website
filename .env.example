# ================================
# EmailJS Configuration
# ================================
# Get your credentials from https://www.emailjs.com/
REACT_APP_EMAILJS_SERVICE_ID=your_service_id_here
REACT_APP_EMAILJS_WELCOME_TEMPLATE_ID=your_welcome_template_id_here
REACT_APP_EMAILJS_NOTIFICATION_TEMPLATE_ID=your_notification_template_id_here
REACT_APP_EMAILJS_PUBLIC_KEY=your_public_key_here

# ================================
# Email Configuration
# ================================
REACT_APP_FROM_EMAIL=your_email@example.com
REACT_APP_NOTIFICATION_EMAIL=your_notification_email@example.com

# ================================
# Analytics & Monitoring (Optional)
# ================================
# Google Analytics
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X
# REACT_APP_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics (automatically enabled on Vercel)
# No additional configuration needed

# ================================
# Error Monitoring (Optional)
# ================================
# Sentry
# REACT_APP_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
# REACT_APP_SENTRY_ENVIRONMENT=production

# ================================
# Feature Flags (Optional)
# ================================
# REACT_APP_ENABLE_PRODUCT_POPUP=true
# REACT_APP_ENABLE_COOKIE_CONSENT=true

# ================================
# API Configuration (Optional)
# ================================
# If you have a backend API
# REACT_APP_API_BASE_URL=https://api.refactron.dev
# REACT_APP_API_TIMEOUT=30000

# ================================
# Build Configuration
# ================================
# Set to 'production' or 'development'
NODE_ENV=production

# Public URL (for deployment)
# PUBLIC_URL=https://refactron.dev

# ================================
# Security (Production Only)
# ================================
# Generate a unique secret for session management if needed
# REACT_APP_SESSION_SECRET=generate_a_random_secret_here

# ================================
# Social Media Links
# ================================
REACT_APP_GITHUB_URL=https://github.com/Refactron-ai
REACT_APP_LINKEDIN_URL=https://linkedin.com/company/refactron
REACT_APP_TWITTER_URL=https://twitter.com/refactron

# ================================
# Contact Information
# ================================
REACT_APP_CONTACT_EMAIL=hello@refactron.dev
REACT_APP_SUPPORT_EMAIL=support@refactron.dev

